@model siteComponente.Web.Models.LoginForm

@{
     ViewBag.Title = "LoginPage";
     Layout = "~/Views/_LayoutPage1.cshtml";
}
<div id="darklight" class="section">

     <section style="margin-top: 30px">



          @using (Html.BeginForm())
          {
               @Html.AntiForgeryToken()
               <div class="form-horizontal; container" style="margin-left: 450px">
                    <h4 class="text-register" style="margin-left: 105px">Sign in</h4>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                         @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label text-register" })
                         <div>
                              @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", style = "width: 30%" } })
                              @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                         </div>
                    </div>

                    <div class="form-group">
                         @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label text-register" })
                         <div>
                              @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", style = "width: 30%" } })

                              @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                         </div>

                    </div>

                    <div class="alert-danger" style="color: red">
                         @if (ViewData["LoginFlag"] != null)
                         {
                              @ViewData["LoginFlag"]
                         }
                    </div>

                    <div class="form-group">
                         <div>
                              <input type="submit" value="                              Sign in                              " class="btn btn-dark" style="margin-top: 20px; width: 30%" ; />
                         </div>
                    </div>

                    <div class="form-group" style="margin-top: 10px">
                         <p>Don't have an account'? <a href="@Url.Action("RegisterPage")" class="fw-bold text-register"><u>Sign Up</u></a></p>
                    </div>
               </div>
          }
     </section>

</div>